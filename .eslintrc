{
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "prettier",
      "jsx-a11y"
    ],
    "env": {
      "node": true,
      "commonjs": true,
      "browser": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "htmlWhitespaceSensitivity": "ignore"
        },
        {
          "usePrettierrc": false
        },
      ],
      "no-unused-vars": "off",
      "react/no-unescaped-entities": "off",
      "no-param-reassign": "error",
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "babelOptions": {
        "presets": ["@babel/preset-react"]
    },
      "ecmaVersion": 12,
      "requireConfigFile": false,
      "ecmaFeatures": {
        "jsx": true
    },
      "project": [
        "./src/"
      ],
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  